pipeline {
    agent any
    parameters {
        string(name:'DOCKER_REGISTRY', defaultValue:'')
        string(name:'DOCKER_IMAGE', defaultValue:'abir10101/tickets-app')
    }
    stages{
        stage('Check Tags') {
            steps {
                sh 'echo ${TAG_NAME}'
                script{
                    if( params.TAG_NAME == "-1" || params.TAG_NAME.isEmpty() ) {
                        error("Tag Name Empty")
                    }
                }
            }
        }
        // stage('Build & Push Image') {
